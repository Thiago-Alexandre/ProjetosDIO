                    <output expression="&quot;Parab&#233;ns, vendedor &quot; &amp; vendedor &amp; &quot;, voc&#234; receber&#225; um abono de 10%!&quot;" newline="True"/>
                </then>
                <else>
                    <output expression="&quot;Parab&#233;ns, vendedor &quot; &amp; vendedor &amp; &quot;, voc&#234; receber&#225; um abono de 03%!&quot;" newline="True"/>
                </else>
            </if>
