    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="janeiro, fevereiro, marco, abril, total" type="Integer" array="False" size=""/>
            <declare name="vendedor" type="String" array="False" size=""/>
            <declare name="media" type="Real" array="False" size=""/>
            <output expression="&quot;Digite o nome do Vendedor:&quot;" newline="True"/>
            <input variable="vendedor"/>
            <output expression="&quot;Digite o n&#250;mero de vendas do m&#234;s de Janeiro do vendedor &quot; &amp; vendedor &amp; &quot;:&quot;" newline="True"/>
            <input variable="janeiro"/>
            <output expression="&quot;Digite o n&#250;mero de vendas do m&#234;s de Fevereiro do vendedor &quot; &amp; vendedor &amp; &quot;:&quot;" newline="True"/>
            <input variable="fevereiro"/>
            <output expression="&quot;Digite o n&#250;mero de vendas do m&#234;s de Mar&#231;o do vendedor &quot; &amp; vendedor &amp; &quot;:&quot;" newline="True"/>
            <input variable="marco"/>
            <output expression="&quot;Digite o n&#250;mero de vendas do m&#234;s de Abril do vendedor &quot; &amp; vendedor &amp; &quot;:&quot;" newline="True"/>
            <input variable="abril"/>
            <assign variable="total" expression="janeiro+fevereiro+marco+abril"/>
